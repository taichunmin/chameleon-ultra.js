  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.ts"
      },
      "script": "./dist/index.global.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./Crypto1": {
      "types": {
        "import": "./dist/Crypto1.d.mts",
